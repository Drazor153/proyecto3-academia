// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Student {
  run            Int                @id
  dv             String
  name           String
  firstLastname  String
  secondLastname String
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
  levels         LevelsOnStudents[]
  Results        Results[]
  Attendance     Attendance[]
}

model Level {
  id         String             @id
  name       String
  students   LevelsOnStudents[]
  ClassGroup ClassGroup[]
}

model LevelsOnStudents {
  student   Student @relation(fields: [studentId], references: [run])
  studentId Int
  level     Level   @relation(fields: [levelId], references: [id])
  levelId   String
  year      Int
  status    String

  @@id([studentId, levelId])
}

model Exam {
  id           Int        @id @default(autoincrement())
  name         String
  date         DateTime
  classgroup   ClassGroup @relation(fields: [classGroupId], references: [id])
  classGroupId Int
  Results      Results[]
}

model Results {
  exam      Exam    @relation(fields: [examId], references: [id])
  examId    Int
  student   Student @relation(fields: [studentId], references: [run])
  studentId Int
  grade     Int

  @@id([examId, studentId])
}

model Group {
  letter     String       @id
  topic      String
  ClassGroup ClassGroup[]
}

model Teacher {
  run            Int          @id
  names          String
  firstLastname  String
  secondLastname String
  ClassGroup     ClassGroup[]
}

model ClassGroup {
  id        Int      @id @default(autoincrement())
  year      Int
  level     Level    @relation(fields: [levelId], references: [id])
  levelId   String
  group     Group    @relation(fields: [groupId], references: [letter])
  groupId   String
  teacher   Teacher? @relation(fields: [teacherId], references: [run])
  teacherId Int?
  Class     Class[]
  Exam      Exam[]
}

model Class {
  id           Int          @id @default(autoincrement())
  title        String
  description  String
  classTime    DateTime
  classgroup   ClassGroup   @relation(fields: [classGroupId], references: [id])
  classGroupId Int
  Attendance   Attendance[]
}

model Attendance {
  class     Class   @relation(fields: [classId], references: [id])
  classId   Int
  student   Student @relation(fields: [studentId], references: [run])
  studentId Int

  @@id([classId, studentId])
}
