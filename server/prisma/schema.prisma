// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Student {
  id             Int                @id @default(autoincrement())
  run            Int                @unique
  dv             String
  name           String
  firstLastname  String
  secondLastname String
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
  levels         LevelsOnStudents[]
  Results        Results[]
}

model Level {
  id           Int                @id @default(autoincrement())
  name         String
  level_number Int
  students     LevelsOnStudents[]
}

model LevelsOnStudents {
  student   Student @relation(fields: [studentId], references: [id])
  studentId Int
  level     Level   @relation(fields: [levelId], references: [id])
  levelId   Int
  year      Int
  status    String

  @@id([studentId, levelId])
}

model Exam {
  id      Int       @id @default(autoincrement())
  name    String
  date    DateTime
  Results Results[]
}

model Results {
  exam      Exam    @relation(fields: [examId], references: [id])
  examId    Int
  student   Student @relation(fields: [studentId], references: [id])
  studentId Int
  grade     Int

  @@id([examId, studentId])
}
